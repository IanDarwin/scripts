#!/bin/sh

# report the temperatures, either once (default) or regularly (-s)

# Some are general, some only one one or another machine, hence grep

# PATT="CPU Temperature"
PATT="temp[012]"

case $1 in
"") exec sysctl -a | egrep "${PATT}" | awk -F= '{sub(" deg", "", $2);print $2}' | sed 1q;;
-s)
	while :
	do
		clear
		date
		sysctl -a | egrep "${PATT}" | sed 1q
		sleep  5
	done
	;;
*)
	echo "Usage: $0 [-s]" >&2
	exit 1
	;;
esac
