#!/bin/sh 

# dse - data security erase, an old IBM mainframe tape erase command

case $# in
1)	;;
*)	echo usage $0 disk
	exit 1
	;;
esac
disk=$1

BS=1m

function devi {
case ${1} in
1) DEV=/dev/urandom;;
2) DEV=/dev/zero;;
3) DEV=/dev/urandom;;
3) DEV=/dev/zero;;
esac
echo $DEV
}

disklabel ${disk}

echo -n "OK to totally erase disk ${disk}"?
read ans

if [ "yes" != ${ans} ];
then	
	echo OK, I wont.
	exit
fi

mount | grep /dev/${disk} && {
	echo "It appears mounted, are you sure?"
	read ansagain
	if [ "yes" != ${ansagain} ];
	then exit
	fi
}

for pass in 1 2 3
do
	echo start pass ${pass} on ${disk}
	dd if=`devi $pass` of=/dev/${disk}c bs=${BS}
done

echo "Disk ${disk} is probably clean"
strings < /dev/${disk}c | head
