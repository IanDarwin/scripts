#!/bin/sh

# take key config files from a machine (NOT including any passwd files!!)

[ -w / ] || { echo be root
	exit 1
}
FILE=$HOME/config.tar.gz

cd /
tar czvf ${FILE} \
	etc/*clam* \
	etc/defaultdomain \
	etc/dumpdates \
	etc/exports \
	etc/group \
	etc/hosts etc/hostname.* \
	etc/hotplug \
	etc/inetd.conf \
	etc/ipsec.conf \
	etc/login.conf \
	etc/mail/ \
	etc/master.passwd etc/passwd \
	etc/motd \
	etc/mygate \
	etc/myname \
	etc/networks \
	etc/newsyslog.conf \
	etc/openvpn \
	etc/pf.conf \
	etc/qemu* \
	etc/rc.conf.local \
	etc/rc.local \
	etc/rc.securelevel \
	etc/resolv.conf* \
	etc/sane.d \
	etc/services \
	etc/shells \
	etc/ssh/ \
	etc/sudoers \
	etc/sysctl.conf \
	etc/syslog.conf \
	etc/ttys \
	upgrade.site

echo "Remember to copy ${FILE} from this system, and keep it secure."
