# mwd - maven wildfly:deploy

USAGE="$0 [-c] old new"

function usage {		# give usage message, and exit
	echo "Usage: ${USAGE}" 2>&1
	exit 1
}

while getopts "c" opt 
do 
	case "$opt" in 
		c)	CLEAN=clean;;
		*)	usage;;
	esac
done
shift `expr $OPTIND - 1`		 # leave just filenames

mvn ${CLEAN} wildfly:deploy $*
