#!/bin/ksh -f

# pushenv -- send my important environment files to a new login

if [ $# -ne 1 ]; then
	echo "Usage: $0 [user@]host" >&2
	exit 1
fi

DEST=$1

DIRS=""

for f in ~/dotfiles ~/scripts 
do
	rm -f ${f}/.#?*
	DIRS="${DIRS} ${f}"
done

scp -r ${DIRS} ${DEST}:
ssh ${DEST} "cd dotfiles; make install"

