#!/bin/ksh

# mkport -- create a new port, in my ports directory

PORTSDIR=/usr/ports
MYPORTS=${PORTSDIR}/mystuff
TEMPLATE=${PORTSDIR}/infrastructure/templates/Makefile.template

# Get what we need...
NAME="$1"
case ${1} in
	"")	echo -n "Program name (1 word)? "
		read NAME junk
		;;
esac

echo -n "Home page (full URL)? "
read HOMEPAGE junk

echo -n "Archive site (directory URL, including ending slash)? "
read DNL junk

echo -n "Archive name (1 word, omit .tar.gz)? "
read DIST junk
echo -n "COMMENT? "
read COMMENT
echo -n "Categories (1 or more words)? "
read CAT OTHERCATS
for f in ${CAT} ${OTHERCATS}
do
	if [ ! -d ${PORTSDIR}/${f} ]; then
		echo >&2 "mkport: $f is not a known category."
	fi
done

DIR=${MYPORTS}/${CAT}/${NAME}
mkdir -p ${DIR} || exit
if [ ! -d ${DIR} ]; then
	echo "$0: failed to mkdir ${DIR}" >&2
	exit 1
fi
cd ${DIR} || exit
MAKEFILE=Makefile
if [ -f ${MAKEFILE} ]; then
	MAKEFILE=Makefile.$$
	echo Makefile exists in ${DIR}, using ${MAKEFILE}
fi

sed \
	-e "/^COMMENT =/s@???@$COMMENT@" \
	-e "/^PKGNAME =/s@???@$NAME@" \
	-e "/^DISTNAME =/s@???@${DIST}@" \
	-e "/^#HOMEPAGE =/s@@HOMEPAGE =@" \
	-e "/^HOMEPAGE =/s@???@${HOMEPAGE}@" \
	-e "/\tURL$/s///" \
	-e "/^CATEGORIES =/s@???@$CAT@" \
	-e "/^MASTER_SITES/s@???@$DNL@" \
	\
	${TEMPLATE} > ${MAKEFILE}

mkdir pkg
touch pkg/PLIST
echo ${NAME} > pkg/DESCR
set -x
make fetch makesum extract
echo continue?
read y
vi ${DIR}/Makefile pkg/DESCR


cvs -d ian@cvs.darwinsys.com:/cvs import -m "$COMMENT" ports/${CAT}/${NAME} ian $(moddate)

