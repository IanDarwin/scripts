sed \
	-e 's/HTML>/html>/' \
	-e 's/HEAD>/head>/' -e 's/TITLE>/title>/g' \
	-e 's/<META/<meta/' -e 's/NAME=/name=/' -e 's/CONTENT=/content=/' \
	-e 's/BODY>/body>/' \
	-e 's/H\([1-6]\)/h\1/g' \
	-e 's/<A/<a/g' -e 's=</A>=</a>=g' -e 's/HREF=/href=/g' \
	-e 's/<IMG/<img/g' -e 's/SRC=/src=/g' \
	-e 's/<P>/<p>/g' \
	-e 's/<TABLE>/<table>/g' \
	-e 's/<TR>/<tr>/g' \
	-e 's/<TD>/<td>/g' \
	-e 's/<TH>/<th>/g' \
	-e 's/UL>/ul>/g' \
	-e 's/LI>/li>/g' \
	-e 's/KBD>/kbd>/g' \
	-e 's/ & /\&amp;/g' \
	$*
