#!/usr/bin/env python

import sys,string,getopt

# echo a | mklinks
# <li><a href='a'>a</a></li>
# echo a b | mklinks
# <li><a href='a'>b </a></li>
# echo a b c | mklinks
# <li><a href='a'>b c </a></li>
# add -n to skip the <li>...</li> wrapper.

PRE="<li>"
POST="</li>"
try:
	options, filenames = getopt.getopt(sys.argv[1:], "-n")
except:
	print "Usage: mklinks [-n]"
	sys.exit(0)
if "-n" in repr(options):
	PRE="";
	POST=""

for line in sys.stdin.readlines():
	line=line[:-1] # kill stupid \n
	words=string.split(line);
	NF = len(words)

	if NF == 0:
		continue

	if NF == 1:
		print "%s<a href='%s'>%s</a>%s" % (PRE, line, line, POST)

	if NF > 1:
		print "%s<a href='%s'>%s</a>%s" % (PRE, words[0], ' '.join(words[1:]), POST)
